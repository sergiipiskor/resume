<main class="m-5">
  {{!-- navigation --}}
  <section>
    {{#with navigation}}
    {{#with links}}
    <div class="nav">
      <div class="nav-item">
        <a href="{{[0].href}}" class="nav-link">{{[0].text}}</a>
      </div>
      <div class="nav-item">
        <a href="{{[1].href}}" class="nav-link">{{[1].text}}</a>
      </div>
      <div class="nav-item">
        <a href="{{[3].href}}" class="nav-link disabled">{{[2].text}}</a>
      </div>
    </div>
    {{/with}}
    {{/with}}
    <hr>

  </section>

  {{!-- formBlock --}}
  <section>
    {{#with formBlock}}
    <div class="row">

      <h1>{{header}}</h1>
      {{#with rating}}
      <span>{{title}}: {{value}}</span>
      {{/with}}
      {{!-- actionBlock --}}
      <div class="col-8">
        {{#with actionBlock}}

        <div class="nav nav-tabs">
          {{#each tabs}}
          <div class="nav-item mx-4 px-3">
            {{#if isActive}}
            <a href="#" class="nav-link active">{{text}}</a>
            {{else}}
            <a href="#" class="nav-link">{{text}}</a>
            {{/if}}
          </div>
          {{/each}}
        </div>

        <hr class="my-5">

        {{#with report}}
        <div class="card p-3">
          <div class="card-title">
            {{title}}
            {{#with button}}
            <div>
              <button href="{{link}}" class="btn btn-secondary mt-2">{{text}}</button>
            </div>
            {{/with}}
          </div>
        </div>
        {{/with}}

        <hr class="my-5">
        {{/with}}

        {{!-- feedbackBlock --}}
        <div>
          {{#with feedbackBlock}}
          <h3 class="mb-5">{{title}}</h3>
          <div>
            {{#each buttons}}

            {{#if isWarning}}
            <button href="{{link}}" class="btn btn-warning me-2">{{text}}</button>
            {{else}}
            {{#if isSuccess}}
            <button href="{{link}}" class="btn btn-success me-2">{{text}}</button>
            {{else}}
            <button href="{{link}}" class="btn btn-danger">{{text}}</button>
            {{/if}}
            {{/if}}

            {{/each}}
          </div>
          {{/with}}
        </div>


      </div>

      {{!-- goodsInfo --}}
      <div class="col-4">
        {{#with goodsInfo}}
        <div class="card mb-2">
          <img class="card col-6 m-3 me-5" src="{{photo}}" alt="image">
          <h5 class="m-3">{{name}}</h5>
        </div>
        <div class="card p-4 mb-2">
          <h4>{{price}}</h4>
          {{#if inMarket}}
          <span class="my-2">Є в наявності</span>
          {{else}}
          {{/if}}
          {{#each buttons}}
          <div>
            {{#if isPrimary}}
            <button href="{{link}}" class="btn btn-primary mb-2">{{text}}</button>
            {{else}}
            {{#if isSecondary}}
            <button href="{{link}}" class="btn btn-secondary">{{text}}</button>
            {{/if}}
            {{/if}}
          </div>
          {{/each}}
        </div>
        <div class="card p-4">
          {{#with seller}}
          <span>{{title}}: <b>{{value}}</b></span>
          {{/with}}
        </div>
        {{/with}}
      </div>

    </div>

    {{/with}}
    <hr class="my-5">
  </section>

  {{!-- reviewList --}}
  <section>
    {{> reviewItem}}
  </section>

  {{!-- service --}}
  <section>
    {{#with service}}
    <div class="row">
      <div class="col-12">
        <div class="card text-bg-success text-center p-2">
          <h2>{{title}}</h2>
          <p>{{description}}</p>
          {{#each buttons}}
          <div class="col-12 m-1">
            <a href=" {{link}}" class="btn btn-primary ">{{text}}</a>
          </div>
          {{/each}}
        </div>
      </div>
    </div>
    {{/with}}
    <hr class="my-5">
  </section>

  {{!-- footer --}}
  <section>
    <div class="row">
      <div class="col-2">
        <div class="nav flex-column">
          {{#each footer.[0]}}
          <div class="nav-item">
            <div>
              <a href="{{link}}" class="nav-link {{#if @last}} disabled{{/if}}">{{text}}</a>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
      <div class="col-2">
        <div class="nav flex-column">
          {{#each footer.[1]}}
          <div class="nav-item">
            <div>
              <a href="{{link}}" class="nav-link {{#if @last}} disabled{{/if}}">{{text}}</a>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
      <div class="col-2">
        <div class="nav flex-column">
          {{#each footer.[2]}}
          <div class="nav-item">
            <div>
              <a href="{{link}}" class="nav-link {{#if @last}} disabled{{/if}}">{{text}}</a>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
      <div class="col-2">
        <div class="nav flex-column">
          {{#each footer.[3]}}
          <div class="nav-item">
            <div>
              <a href="{{link}}" class="nav-link {{#if @last}} disabled{{/if}}">{{text}}</a>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
      <div class="col-2">
        <div class="nav flex-column">
          {{#each footer.[4]}}
          <div class="nav-item">
            <div>
              <a href="{{link}}" class="nav-link {{#if @last}} disabled{{/if}}">{{text}}</a>
            </div>
          </div>
          {{/each}}
        </div>
      </div>
    </div>

  </section>

</main>