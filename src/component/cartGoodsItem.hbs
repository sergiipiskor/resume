<div class="card my-3">
    <div class="row p-1">

        <div class="col-2">
            <img src="{{image}}" alt="image">
        </div>

        <div class="col-4">
            <h5>{{name}}</h5>
            {{description}}
        </div>

        <div class="col-2 mt-4">
            {{#with price}}
            {{title}}: <br><b>{{value}}</b>
            {{/with}}
        </div>

        <div class="col-2 mt-5">
            {{amount}}
        </div>

        <div class="col-2 mt-3">
            {{#each buttons}}
            {{#if isPrimary}}
            <button class="btn btn-primary">{{text}}</button>
            {{else}}
            <button class="btn btn-outline-danger mt-2">{{text}}</button>
            {{/if}}
            {{/each}}
        </div>

    </div>
</div>